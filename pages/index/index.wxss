.weather-bg{
  width:100%;
  height:750rpx;
  z-index:-1;
  position:absolute;
  top:0;
  left:0;
}

.weather-wrapper{
  position:relative;
  text-align:center;
}

.location-wrapper{
  position:relative;
  margin-top:50rpx;
}

.location{
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.weather-info{
  position: relative;
  top:150rpx;
}

.weather-temp{
  font-size:150rpx;
  line-height: 210rpx;
  margin-bottom: 10rpx;
}

.weather-detail{
  display:flex;
  justify-content: center;
  align-items: center;
}

.weather-icon{
  height:63rpx;
  width:63rpx;
  margin-right:10rpx;
}