.weather-bg{
  width:100%;
  height:550rpx;
  z-index:-1;
  position:absolute;
  top:0;
  left:0;
}

.weather-wrapper{
  position:relative;
  text-align:center;
}

.location-wrapper{
  position:relative;
  padding-top:50rpx;
}

.location{
  display: flex;
  align-items: center;
  justify-content: center;
}

.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx;
}

.weather-info{
  position: relative;
  margin-top:150rpx;
}

.weather-temp{
  font-size:150rpx;
  line-height: 210rpx;
  margin-bottom: 10rpx;
}

.weather-detail{
  position: relative;
  display:flex;
  justify-content: center;
  align-items: center;
}

.weather-icon{
  height:63rpx;
  width:63rpx;
  margin-right:10rpx;
}

.forecast{
  position:relative;
  padding-top: 50rpx;
  background-color: #f5e3fc;
}

.forecast-header{
  display: flex;
  align-items: center;
  justify-content: center;
}
.title-icon{
   margin-right: 10rpx;
   width: 36rpx;
   height: 28rpx;
}

.forecast-wrapper{
  display: flex;
  position:relative;
  flex-shrink: 0;
  padding-top: 30rpx;
  height: 600rpx; 
  align-items: center;
  /* background-color: red; */
}

.weather-forecast{
  display: flex;
  flex-direction:column;
  align-items:center;
  text-align:center;
  margin-right:50rpx;
}

.forecast-date,
.forecast-temp{
  margin-bottom:100rpx;
  font-size:40rpx;
  line-height:56rpx;
}

.forecast-icon{
  height:63rpx;
  width:63rpx;
}